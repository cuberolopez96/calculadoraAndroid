<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.cubero.calcurladora.MainActivity" android:weightSum="100"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_weight="50"
        android:orientation="vertical"
        android:weightSum="100">
        <TextView
            android:id="@+id/resultado"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_weight="50"
            android:text="0"
            android:textSize="50dp"/>
        <TextView
            android:id="@+id/operacion"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_weight="50"
            android:text="0"
            android:textSize="50dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@android:color/holo_orange_light"
        android:layout_weight="50"
        android:weightSum="100"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:weightSum="100"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:weightSum="100"
                android:orientation="vertical">
                <Button
                    android:id="@+id/id7"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_weight="25"
                    android:background="@android:color/transparent"
                    android:text="7"
                    android:textColor="@android:color/white"
                    android:textSize="20dp" />
                <Button
                    android:id="@+id/id4"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_weight="25"
                    android:background="@android:color/transparent"
                    android:text="4"
                    android:textColor="@android:color/white"
                    android:textSize="20dp"/>
                <Button
                    android:id="@+id/id1"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_weight="25"
                    android:background="@android:color/transparent"
                    android:text="1"
                    android:textColor="@android:color/white"
                    android:textSize="20dp"/>
                <Button
                    android:id="@+id/idpunto"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_weight="25"
                    android:gravity="center"
                    android:background="@android:color/transparent"
                    android:text="."
                    android:textColor="@android:color/white"
                    android:textSize="20dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:weightSum="100"
                android:orientation="vertical">
                <Button
                    android:id="@+id/id8"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_weight="25"
                    android:background="@android:color/transparent"
                    android:text="8"
                    android:textColor="@android:color/white"
                    android:textSize="20dp" />
                <Button
                    android:id="@+id/id5"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_weight="25"
                    android:background="@android:color/transparent"
                    android:text="5"
                    android:textColor="@android:color/white"
                    android:textSize="20dp"/>
                <Button
                    android:id="@+id/id2"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_weight="25"
                    android:background="@android:color/transparent"
                    android:text="2"
                    android:textColor="@android:color/white"
                    android:textSize="20dp"/>
                <Button
                    android:id="@+id/id0"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_weight="25"
                    android:background="@android:color/transparent"
                    android:text="0"
                    android:textColor="@android:color/white"
                    android:textSize="25dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:weightSum="100"
                android:orientation="vertical">
                <Button
                    android:id="@+id/id9"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_weight="25"
                    android:background="@android:color/transparent"
                    android:text="9"
                    android:textColor="@android:color/white"
                    android:textSize="20dp" />
                <Button
                    android:id="@+id/id6"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_weight="25"
                    android:background="@android:color/transparent"
                    android:text="6"
                    android:textColor="@android:color/white"
                    android:textSize="20dp"/>
                <Button
                    android:id="@+id/id3"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_weight="25"
                    android:background="@android:color/transparent"
                    android:text="3"
                    android:textColor="@android:color/white"
                    android:textSize="20dp"/>
                <Button
                    android:id="@+id/igual"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_weight="25"
                    android:background="@android:color/transparent"
                    android:text="="
                    android:textColor="@android:color/white"
                    android:textSize="20dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:weightSum="100"
                android:orientation="vertical">
                <Button
                    android:id="@+id/sumar"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_weight="20"
                    android:background="@android:color/transparent"
                    android:text="+"
                    android:textColor="@android:color/white"
                    android:textSize="20dp" />
                <Button
                    android:id="@+id/restar"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_weight="20"
                    android:background="@android:color/transparent"
                    android:text="-"
                    android:textColor="@android:color/white"
                    android:textSize="20dp"/>
                <Button
                    android:id="@+id/dividir"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_weight="20"
                    android:background="@android:color/transparent"
                    android:text="/"
                    android:textColor="@android:color/white"
                    android:textSize="20dp"/>
                <Button
                    android:id="@+id/multiplicar"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_weight="20"
                    android:background="@android:color/transparent"
                    android:text="*"
                    android:textColor="@android:color/white"
                    android:textSize="30dp"/>
                <Button
                    android:id="@+id/ac"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_weight="20"
                    android:background="@android:color/transparent"
                    android:text="AC"
                    android:textColor="@android:color/white"
                    android:textSize="30dp"/>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:orientation="horizontal"
            android:weightSum="100"
            android:background="@android:color/holo_red_light">
            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="33"
                android:orientation="vertical"
                android:weightSum="100">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="33"
                    android:text="sen"
                    android:background="@android:color/transparent"
                    android:textColor="@android:color/white"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="33"
                    android:text="ln"
                    android:background="@android:color/transparent"
                    android:textColor="@android:color/white"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="33"
                    android:text="pi"
                    android:background="@android:color/transparent"
                    android:textColor="@android:color/white"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="33"
                android:orientation="vertical"
                android:weightSum="100">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="33"
                    android:text="cos"
                    android:background="@android:color/transparent"
                    android:textColor="@android:color/white"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="33"
                    android:text="log"
                    android:background="@android:color/transparent"
                    android:textColor="@android:color/white"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="33"
                    android:text="e"
                    android:background="@android:color/transparent"
                    android:textColor="@android:color/white"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="33"
                android:orientation="vertical"
                android:weightSum="100">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="33"
                    android:text="tan"
                    android:background="@android:color/transparent"
                    android:textColor="@android:color/white"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="33"
                    android:text="!"
                    android:background="@android:color/transparent"
                    android:textColor="@android:color/white"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="33"
                    android:text="^"
                    android:background="@android:color/transparent"
                    android:textColor="@android:color/white"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>
